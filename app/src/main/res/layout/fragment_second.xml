<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/id_profile_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_uname"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_profile_icon"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_name"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_uname"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_email"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_address"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_email"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_phone"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_address"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_website"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_phone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_companydetails"
        android:text="xyxx"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_website"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

